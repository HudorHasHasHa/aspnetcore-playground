@model aspnetcore_playground.ViewModels.PieListViewModel

<html>
	<head>
		<meta name="viewport" content="width=device-width"/>
		<title>Asp.net core playground</title>
	</head>
	<body>
		<h1>@Model.CurrentCategory</h1>
		@foreach(var pie in Model.Pies)
		{
			<div>
				<h2>@pie.Name</h2>
				<h3>@pie.Price.ToString("c")</h3>
				<h4>@pie.Category</h4>
			</div>
		}
	</body>
</html>